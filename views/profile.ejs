<!doctype html>
<html>
<head>
  <title>Emergency Fund</title>
  <link rel="shortcut icon" href="favicon.ico">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
  <link rel="stylesheet" href="style.css">
</head>
<body>
<div class="container">

    <div class="page-header text-center">
      <h1><span class="fa fa-medkit"></span>Emergency Fund Profile Page</h1>
      <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
          <h2>PREPARE! Tally up a list of items needed in case of an emergency.</h2>
          <h3>Total Spent:
            <% let total = 0 %>
            <% for(let i=0; i<budget.length; i++) {%>
              <%total += budget[i].cost %>
            <% } %>
            <span id="budgetRemain">$ <%= total %></span>
          </h3>
          <h3>List</h3>
            <ul class="messages">
              <% for(let i=0; i<budget.length; i++) {%>
                <li class="items">
                  <span><%= budget[i].item %>: </span>
                  <span>$<%= budget[i].cost %></span>
                  <span><i class="fa fa-trash" aria-hidden="true"></i></span>
                </li>
              <% } %>
            </ul>

          <h2>Add a message</h2>
            <% if (user.local.email) { %>
              <form action="/budget" method="POST">
                <input type="text" placeholder="item" name="item">
                <input type="number" placeholder="cost" name="cost">
                <button type="submit">Submit</button>
              </form>
              <!-- <form action="/messages" method="POST">
                <input type="text" value="<%= user.local.email %>" name="name">
                <input type="text" placeholder="message" name="msg">
                <button type="submit">Submit</button>
              </form> -->
            <% } %>
        </div>
</div>

<script src="main.js"></script>

</body>
</html>
